{
  "name": "syncot",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lerna": "^3.10.7",
    "prettier": "^1.16.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.3.1"
  },
  "author": "Greg Kubisa <gkubisa@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SyncOT/SyncOT.git"
  },
  "scripts": {
    "clean": "rimraf packages/*/lib",
    "prettier": "prettier --list-different 'packages/*/src/**/*' 'packages/*/*.json' '*.json' '*.MD' '.prettierrc'",
    "tslint": "tslint --project .",
    "tsc": "tsc -b packages/*",
    "test": "jest",
    "build": "npm run clean && npm run prettier && npm run tslint && npm run tsc && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "dependencies": {
    "@syncot/client": "file:packages/client",
    "@syncot/core": "file:packages/core",
    "@syncot/server": "file:packages/server"
  }
}
