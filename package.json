{
  "name": "syncot",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  },
  "author": "Greg Kubisa <gkubisa@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SyncOT/SyncOT.git"
  },
  "scripts": {
    "clean": "rimraf packages/*/lib",
    "prettier": "prettier --list-different 'packages/*/src/**/*.{ts,tsx}'",
    "tslint": "tslint --project .",
    "tsc": "tsc -b packages/*",
    "test": "jest",
    "build": "npm run clean && npm run prettier && npm run tslint && npm run tsc && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "dependencies": {
    "@syncot/client": "file:packages/client",
    "@syncot/core": "file:packages/core",
    "@syncot/memory-client-storage": "file:packages/memory-client-storage",
    "@syncot/server": "file:packages/server"
  }
}
