{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [ "es6" ],
    "baseUrl": "./packages",
    "paths": {
      "@syncot/*": ["./*/lib"]
    },
    "composite": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "removeComments": true
  },
  "exclude": [
    "**/node_modules/",
    "**/*.test.*",
    "**/lib/"
  ]
}
